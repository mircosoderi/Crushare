<resources>

    <!-- Base application theme. -->
    <style name="MainActivityTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!--
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        -->
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@drawable/activity_bg_repeated</item>
        <item name="android:itemTextAppearance">@style/MenuTextStyle</item>
        <item name="android:itemBackground">@drawable/menu_item_bg</item>

    </style>

    <style name="CleanTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!--
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        -->
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@drawable/about_bg</item>
    </style>

    <style name="FullscreenDialogStyle" parent="android:Theme" >
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowIsFloating">false</item>
    </style>

    <style name="MenuTextStyle" parent="@android:style/TextAppearance.Widget.IconMenu.Item">
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="PollActivityTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowBackground">@drawable/poll_bg_repeated</item>
    </style>

</resources>
